<!DOCTYPE html>
<html>
<head>
  <title>翻訳システム</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="http://cdn.muicss.com/mui-0.2.9/css/mui.min.css" rel="stylesheet" type="text/css" />
  <script src="http://cdn.muicss.com/mui-0.2.9/js/mui.min.js"></script>
</head>
<body>

  <header class="mui-appbar mui--z1">
    <div class="mui-container">
      <table width="100%">
        <tr class="mui--appbar-height">
          <td class="mui--text-title">翻訳システム</td>
          <td align="right">
            <ul class="mui-list--inline mui--text-body2">
              <li><%= link_to '図書を追加', new_book_path %></li>
              <li><%= link_to '図書管', books_path %></li>

              <% if user_signed_in? %>
                <li>
                <%= link_to('プロファイル編集', edit_user_registration_path) %>
                <%= link_to('サインアウト', destroy_user_session_path, :method => :delete) %>
                </li>
              <% else %>
                <li>
                  <%= link_to('ログイン', new_user_session_path)  %>
                  <%= link_to('メンバー登録', new_user_registration_path)  %>
                </li>
              <% end %>
            </ul>
          </td>
        </tr>
      </table>
    </div>
  </header>

  <div id="content-wrapper" class="mui-container-fluid">
    <div class="mui--appbar-height"></div>
    <%= yield %>
  </div>

  <footer>
    <div class="mui-container mui--text-center">
      Developed by <a href="#">DevTeam</a>
    </div>
  </footer>

</body>
</html>
